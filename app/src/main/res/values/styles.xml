<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomTimeInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <style name="CustomTimeInput" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">48sp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="CustomTimeToggleButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:font">@font/lato_italic</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="RoundedCornerShape">
        <item name="cornerSize">20%</item>
    </style>

</resources>